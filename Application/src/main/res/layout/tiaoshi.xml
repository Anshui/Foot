<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chair"
    android:padding="16dp">

    <Button
        android:id="@+id/bt_1"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/guanbi_selector"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_below="@+id/bt_1"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:text="关闭"/>

    <Button
        android:id="@+id/bt_2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dianji_selector" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_below="@id/bt_2"
        android:layout_alignLeft="@id/bt_2"
        android:gravity="center"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="电机开/关"/>

    <Button
        android:id="@+id/bt_3"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/qiehuan_selector" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_below="@id/bt_3"
        android:layout_alignLeft="@id/bt_3"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:text="模式切换"/>

    <Button
        android:layout_below="@id/tv_1"
        android:id="@+id/bt_4"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/yidong_selector"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/tv_4"
        android:layout_below="@id/bt_4"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:text="位置移动"/>
    <Button
        android:id="@+id/bt_5"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/zhuanxiang_selector"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_2"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/tv_5"
        android:layout_below="@id/bt_5"
        android:layout_alignLeft="@id/bt_5"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:text="速度模式转向"/>
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_3"
        android:id="@+id/bt_6"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/wangfu_selector"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/tv_6"
        android:layout_below="@id/bt_6"
        android:layout_alignLeft="@id/bt_6"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:text="往复运动"/>
    <Button
        android:layout_below="@id/tv_4"
        android:id="@+id/bt_7"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:text="扩展1"
        android:layout_marginTop="6dp"/>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_5"
        android:id="@+id/bt_8"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:text="扩展2"
        android:layout_marginTop="6dp"/>
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_6"
        android:id="@+id/bt_9"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:text="扩展3"
        android:layout_marginTop="6dp"/>

</RelativeLayout>
